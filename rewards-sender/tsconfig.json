{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test/**/*",
    "e2e-test/**/*",
    "dist/**/*"
  ],
  "_comment": "The polkadot-watcher app contains typescript errors"
}
